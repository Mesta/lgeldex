<%= pageTitle "Versus !" %>

<%= bootstrap_form_for @versus, url: versus_path, method: :post do |f| %>
    <%= @versus.categorie.question %>

    <%= f.radio_button :choix, @versus.joueur_1.id, label: @versus.joueur_1.pseudo %>
    <%= f.radio_button :choix, @versus.joueur_2.id, label: @versus.joueur_2.pseudo %>

    <%= f.submit "Voter", class: "btn btn-success" %>
    <%= link_to "Passer", versus_path, class: "btn btn-default" %>
<% end %>

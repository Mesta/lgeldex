<div class="text-center">
  <%= pageTitle "Versus" %>

  <%= bootstrap_form_for @versus, url: versus_path, method: :post, html: {class: 'text-center'} do |f| %>
      <h2>
        <% if not @versus.categorie.icone.nil? %>
            <%= image_tag @versus.categorie.icone.url(:icone) %>
        <% end %>
        <%= @versus.categorie.question %></h2>
      <br/>

      <%= f.radio_button :choix, @versus.joueur_1.id, label: @versus.joueur_1.pseudo %>
      <%= f.radio_button :choix, @versus.joueur_2.id, label: @versus.joueur_2.pseudo %>
      <br/>

      <p>
        Indication : <%= @versus.categorie.description %>
      </p>

      <%= f.submit "Voter", class: "btn btn-success btn-lg" %>
      <%= link_to "Passer", versus_path, class: "btn btn-default btn-lg" %>

      <hr/>

      <div id="versus_config">
        <p>
          Pour rappel, vous jouez avec les paramètres suivant :
        <ul>
          <li>Mode de jeu : <span class="label label-info"><%= Mode.find(@versus.mode).nom %></span></li>
          <li>Serious business :
            <% if @versus.is_serious %>
                <span class="label label-success">activé</span>
            <% else %>
                <span class="label label-danger">désactivé</span>
            <% end %>
            </span>
          </li>
        </ul>
        <%= link_to "Reconfigurer", versus_config_path, class: 'btn btn-default' %>
        </p>
      </div>
  <% end %>
</div>
<div class="text-center">
  <%= pageTitle "Top 20", params["nom"] %>
</div>

<% rang = 1 %>

<div class="container top" >
  <div class="panel panel-body">
    <table class="table table-hover table-stripped table-condensed">
      <thead>
      <tr>
        <th></th>
        <th>Pseudo</th>
      </tr>
      </thead>

      <tbody>
      <% @tops.each do |top| %>
          <tr>
            <td align="right"><i>#<%= rang %></i></td>
            <td>
              <%= Joueur.find(top.joueur_id).pseudo %>
            </td>
          </tr>
          <% rang = rang + 1 %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

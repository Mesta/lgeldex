<div class="container">
  <%= pageTitle "Suggestions", "Liste" %>


  <div class="panel panel-default">
    <div class="panel-heading">
      <ul class="list-inline panel-links" style="text-align:right;">
        <li><%= link_to 'Purger', purger_suggestions_path, :class => 'btn btn-danger', :title => "Purger",
                        method: :delete, data: { confirm: 'Êtes-vous sûr?' }
        %></li>
      </ul>
    </div>
    <div class="panel-body">
      <table class="table table-hover table-stripped table-condensed">
        <thead>
        <tr>
          <th>Pseudo</th>
          <th>Modes</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @suggestions.each do |suggestion| %>
            <tr>
              <td><%= suggestion.pseudo %></td>
              <td>
                <% suggestion.modes.each do |mode| %>
                    <span class="label label-info"><%= mode.nom %></span>
                <% end %>
              </td>
              <td align="right">
                <div class="btn btn-primary">Créer
                  <span class="badge"><%= suggestion.nb_vote %></span>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>